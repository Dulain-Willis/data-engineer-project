# Enterprise Data Platform - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_IMAGE_NAME=apache/airflow:3.0.6
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=../../
FERNET_KEY=your-fernet-key-here

# Airflow Web UI
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin123

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# =============================================================================
# AIRBYTE CONFIGURATION
# =============================================================================
AIRBYTE_VERSION=0.50.40
AIRBYTE_DB_USER=airbyte
AIRBYTE_DB_PASSWORD=password
AIRBYTE_DB_HOST=airbyte-db
AIRBYTE_DB_PORT=5432
AIRBYTE_DB_DB=airbyte

# =============================================================================
# MINIO/S3 CONFIGURATION
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_CONSOLE_ADDRESS=:9001

# =============================================================================
# DBT CONFIGURATION
# =============================================================================
DBT_PROFILES_DIR=../../services/dbt
DBT_PROJECT_DIR=../../services/dbt

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Enable detailed logging
AIRFLOW__LOGGING__LOGGING_LEVEL=INFO
AIRFLOW__LOGGING__DAG_PROCESSOR_MANAGER_LOG_LOCATION=/opt/airflow/logs/dag_processor_manager/dag_processor_manager.log

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# FERNET_KEY=your-generated-fernet-key-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' for development
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment for production deployment
# AIRFLOW__CORE__EXECUTOR=KubernetesExecutor
# AIRFLOW__KUBERNETES__NAMESPACE=airflow
# AIRFLOW__KUBERNETES__WORKER_CONTAINER_REPOSITORY=your-registry/airflow
